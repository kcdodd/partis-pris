Bootstrap: docker
From: ubuntu:22.04

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
%post
  # To avoid being prompted during apt-get
  TZ=Etc/UTC && \
    ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && \
    echo $TZ > /etc/timezone

  apt-get update
  apt-get upgrade -y
  apt-get install -y \
    lsb-release \
    python3-all-dev \
    python3-pip \
    python3-venv \
    python3.10 \
    python3.10-venv \
    file \
    tcl \
    csh \
    tcsh \
    zsh \
    ssh \
    wget \
    curl \
    tmux \
    patch \
    git \
    tar \
    zip \
    gzip \
    bzip2 \
    unzip \
    gnupg2 \
    language-pack-en \
    libncurses5-dev \
    xz-utils \
    mlocate \
    chrpath \
    patchelf \
    golang \
    build-essential \
    llvm \
    pkg-config \
    environment-modules \
    munge \
    slurm-wlm \
    libssl-dev \
    uuid-dev \
    libgpgme11-dev \
    squashfs-tools \
    libseccomp-dev \
    libreadline-dev \
    libgmp-dev \
    libmpfr-dev \
    libmpc-dev \
    libxml2-dev \
    libxmlsec1-dev \
    libtinyxml-dev \
    libpugixml-dev \
    libsqlite3-dev \
    libpotrace-dev \
    libntirpc-dev \
    hwloc \
    libffi-dev \
    zlib1g-dev \
    lzma \
    liblzma-dev \
    libbz2-dev \
    zstd \
    libzstd-dev \
    pigz \
    libgl1 \
    libglew-dev \
    tk \
    tk-dev \
    libfftw3-dev \
    texlive-latex-recommended \
    texlive-latex-extra \
    texlive-fonts-recommended \
    texlive-fonts-extra \
    texlive-science \
    texlive-xetex \
    biber \
    fonts-freefont-otf \
    latexmk \
    xindy \
    libcairo2 \
    libcairo2-dev \
    liblapack-dev \
    libopenblas-dev \
    libhdf5-dev

  # make sure sh points to 'bash' instead of 'dash'
  ln -s /bin/bash /bin/sh.bash
  mv /bin/sh.bash /bin/sh

  # good base python and pip version
  update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.10 0
  python3 --version
  python3 -m pip install --upgrade pip
